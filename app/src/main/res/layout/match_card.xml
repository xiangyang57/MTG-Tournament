<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="java.text.DateFormat" />
        <variable
            name="match"
            type="com.example.mtgtourney.data.Match" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:strokeColor="@color/player1"
        app:strokeWidth="@dimen/margin_small"
        app:cardCornerRadius="@dimen/margin_small"
        android:minHeight="@dimen/match_loss_icon">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/match_name"
            android:textStyle="bold"
            android:text="@{match.playerA.commander}"
            tools:text="Team A"/>
        <ImageView
            android:layout_width="@dimen/match_loss_icon"
            android:layout_height="@dimen/match_loss_icon"
            android:src="@drawable/cross_out"
            android:layout_gravity="center"
            android:visibility="@{(match.winner != null &amp; !match.winner.commander.equals(match.playerA.commander)) ? View.VISIBLE : View.GONE}"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/match_name"
        android:textStyle="bold"
        android:text="vs"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:strokeColor="@color/player2"
        app:strokeWidth="@dimen/margin_small"
        app:cardCornerRadius="@dimen/margin_small"
        android:minHeight="@dimen/match_loss_icon">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/match_name"
            android:textStyle="bold"
            android:text="@{match.playerB.commander}"
            tools:text="Team B"/>
        <ImageView
            android:layout_width="@dimen/match_loss_icon"
            android:layout_height="@dimen/match_loss_icon"
            android:src="@drawable/cross_out"
            android:layout_gravity="center"
            android:visibility="@{(match.winner != null &amp; !match.winner.commander.equals(match.playerB.commander)) ? View.VISIBLE : View.GONE}"/>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
</layout>